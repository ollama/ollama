      <Icon Id="productIcon" SourceFile="..\assets\app.ico" />
      <Property Id="ARPPRODUCTICON" Value="productIcon" />

      <ComponentGroup Id="cuda_v13_Components" Directory="lib_ollama_cuda_v13_Dir">
        <Component><File Source="lib\ollama\cuda_v13\ggml-cuda.dll"/></Component>
      </ComponentGroup>

      <Feature Id="MainFeature" Title="Ollama CUDA v13" Level="1">
        <ComponentGroupRef Id="cuda_v13_Components" />
      </Feature>
    </Package>
</Wix>
